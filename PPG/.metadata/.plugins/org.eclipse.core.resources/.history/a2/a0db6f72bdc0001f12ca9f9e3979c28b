/* USER CODE BEGIN PTD */
typedef enum {
    STATE_IDLE,
    STATE_SELECT,
    STATE_WORKING,
    STATE_ERROR
} SystemState_t;

SystemState_t systemState = STATE_IDLE;
uint8_t selectedMode = 0; // 0 = RED, 1 = IR

// 按钮相关变量
volatile uint8_t buttonPressed = 0;
volatile uint8_t buttonLongPress = 0;

/* USER CODE END PTD */

